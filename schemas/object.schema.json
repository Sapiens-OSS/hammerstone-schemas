                    "chiselStone",
                    "planting",
                    "mulching",
                    "threshing",
                    "grinding",
                    "baking",
                    "brickBuilding",
                    "tiling",
                    "medicine",
                    "blacksmithing"
                  ]
                },
                "tool": {
                  "type": "string",
                  "enum": [
                    "treeChop",
                    "dig",
                    "mine",
                    "weaponBasic",
                    "weaponSpear",
                    "weaponKnife",
                    "butcher",
                    "knapping",
                    "grinding",
                    "carving",
                    "crucible",
                    "hammering",
                    "softChiselling",
                    "hardChiselling"
                  ]
                },
                "hs_output": {
                  "type": "object",
                  "properties": {
                    "simple_output": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "List of gameObjects this recipe generates"
                    }
                  }
                },
                "action_sequence": {
                  "type": "string",
                  "enum": [
                    "idle",
                    "moveTo",
                    "chop",
                    "pullOut",
                    "gather",
                    "gatherBush",
                    "dig",
                    "clear",
                    "pickupObject",
                    "pickupMultiObject",
                    "deliverObject",
                    "deliverMultiObject",
                    "dropObject",
                    "eat",
                    "playFlute",
                    "playDrum",
                    "playBalafon",
                    "wave",
                    "turn",
                    "fall",
                    "sleep",
                    "sit",
                    "buildMoveComponent",
                    "light",
                    "extinguish",
                    "destroyContents",
                    "throwProjectile",
                    "butcher",
                    "knap",
                    "knapCrude",
                    "grind",
                    "scrapeWood",
                    "fireStickCook",
                    "smeltMetal",
                    "recruit",
                    "inspect",
                    "patDown",
                    "potteryCraft",
                    "toolAssembly",
                    "thresh",
                    "spinCraft",
                    "mine",
                    "takeOffTorsoClothing",
                    "putOnTorsoClothing",
                    "flee",
