{
  "__url": "https://raw.githubusercontent.com/Sapiens-OSS/hammerstone-schemas/updating-schemas/schemas/object.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "hammerstone.object.schema",
  "title": "Object Definition File",
  "description": "Objects are interactable items and tools in your Sapiens world.",
  "type": "object",
  "required": ["hammerstone:object_definition"],
  "definitions": {},
  "exportDir": "objects",
  "properties": {
    "hammerstone:object_definition": {
      "type": "object",
      "required": ["description", "components"],
      "properties": {
        "meta": {
          "description": "Container for 'metadata' related to your object. Feel free to introduce new fields.",
          "type": "object",
          "properties": {
            "author": {
              "type": "string",
              "description": "The author who created this file.",
              "examples": ["SirLich"]
            },
            "sapiens_version": {
              "type": "string",
              "description": "The version of Sapiens that this object was intended to be used with.",
              "examples": ["0.3.6"]
            },
            "hammerstone_version": {
              "type": "string",
              "description": "The version of Hammerstone that this object was intended to be used with.",
              "examples": ["1.2.5"]
            }
          }
        },
        "components": {
          "description": "Container for object 'components', each covering a topic or capability.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "hs_object": {
              "type": "object",
              "description": "This component creates a new 'gameObject'. You can specify basic information about the newly created object here.",
              "required": ["model"],
              "properties": {
                "scale": {
                  "type": "number",
                  "description": "The scale of the model.",
                  "default": 1
                },
                "model": {
                  "type": "string",
                  "description": "The name of the model that will represent this object.\n- Field: modelName",
                  "examples": ["snakeSkull"]
                },
                "random_rotation": {
                  "type": "boolean",
                  "default": true,
                  "description": "Whether the object will have a random initial rotation."
                },
                "physics": {
                  "type": "boolean",
                  "default": true,
                  "description": "Whether the object has physics.\n- Field: hasPhysics"
                },
                "link_to_resource": {
                  "type": "string",
                  "description": "Allows you to link to an existing resource, rather than creating a new one. Mutually exclusive with 'create_resource'",
                  "examples": ["sirlich:skulls"]
                },
                "marker_positions": {
                  "type": "array",
                  "description": "The position where in-game markers will be positioned, in metres. In development.",
                  "maximum": 0
                }
              }
            },
            "hs_resource": {
              "description": "Defines the relationship that this object has with any potential resources.",
              "type": "object",
              "properties": {
                "create_resource": {
                  "type": "boolean"
                },
                "storage_identifier": {
                  "type": "string"
                }
              }
            },
            "hs_storage_link": {
              "type": "object",
              "required": ["identifier"],
              "properties": {
                "identifier": { "type": "string" }
              }
            },
            "hs_plans": {
              "type": "object",
              "description": "Allows you to define a custom 'planHelper' for this object. Can be used to hook your object to a unique plan, or use a vanilla preset.",
              "required": ["available_plans"],
              "properties": {
                "available_plans": {
                  "type": "string",
                  "description": "The plan-helper config you want to use.\n- See: planHelper.lua",
                  "examples": [
                    "availablePlansForInProgressBuildObjects",
                    "availablePlansForMineableObjects"
                  ]
                }
              }
            },
            "hs_tool": {
              "type": "object",
              "description": "Tool configurations. You can add multiple configs if your tool is multi-purpose.\n- Field: toolUsages",
              "properties": {
                "treeChop": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "dig": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "mine": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "     ": {
                  "title": "weaponBasic",
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "weaponSpear": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "weaponKnife": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "butcher": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "knapping": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "knappingCrude": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "grinding": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "carving": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "crucible": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "hammering": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "softChiselling": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                },
                "hardChiselling": {
                  "type": "object",
                  "properties": {
                    "damage": {
                      "type": "number",
                      "default": 1
                    },
                    "durability": {
                      "type": "number",
                      "default": 1
                    },
                    "speed": {
                      "type": "number",
                      "default": 1
                    }
                  }
                }
              }
            },
            "hs_evolving_object": {
              "type": "object",
              "description": "This component allows specifying how your object will rot/dry/despawn.",
              "required": ["category"],
              "properties": {
                "time_years": {
                  "type": "string",
                  "description": "The time in years before this object will transform. Mutually exclusive with 'time_days'"
                },
                "time_days": {
                  "type": "string",
                  "description": "The time in days before this object will transform. Mutually exclusive with 'time_years'"
                },
                "transform_to": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "Identifiers of the item you want to transform to. Leave blank to despawn rotten items.",
                    "examples": ["sirlich:snake_skull"]
                  }
                },
                "category": {
                  "type": "string",
                  "description": "The category of transformation that is occurring.",
                  "anyOf": [
                    {
                      "const": "rot",
                      "title": "Sets that the object is rotting. i.e., becoming a rotten variation of itself."
                    },
                    {
                      "const": "dry",
                      "title": "Sets that the object is drying. i.e., becoming a dried variation of itself."
                    },
                    {
                      "const": "despawn",
                      "title": "Sets that the object is de-spawning. i.e., transforming into nothing."
                    }
                  ]
                }
              }
            },
            "hs_food": {
              "type": "object",
              "description": "Defines that the object is edible, and specifies it's properties.",
              "properties": {
                "portions": {
                  "type": "integer",
                  "description": "The number of times this food item can be eaten before it is fully consumed.",
                  "default": 1
                },
                "value": {
                  "type": "number",
                  "description": "The saturation value gained each time this food is eaten.",
                  "default": 0.5
                },
                "food_poison_chance": {
                  "type": "number",
                  "description": "The chance your Sapien will become sick consuming this food. 0=0%, 1=100%",
                  "default": 0
                },
                "items_when_eaten": {
                  "type": "array",
                  "description": "The list of items to transform to, when this object is eaten.",
                  "items": {
                    "type": "string",
                    "description": "Object identifier",
                    "examples": ["sirlich:rat_skull"]
                  }
                }
              }
            },
            "hs_harvestable": {
              "type": "object",
              "description": "Controls whether the object can be harvested for resources.\n- See: harvestable.lua\n- Tip: Set 'hs_plans' to something that supports harvesting.",
              "required": ["resources_to_harvest", "finish_harvest_index"],
              "properties": {
                "resources_to_harvest": {
                  "type": "array",
                  "description": "The list of resources to drop when this object is harvested. Duplicates are allowed.",
                  "items": {
                    "type": "string",
                    "description": "The 'gameObject' identifier of a single item to drop.\n- See: gameObject.lua",
                    "examples": ["hs:rat_skull"]
                  }
                },
                "finish_harvest_index": {
                  "type": "integer",
                  "description": "The index [in resources_to_harvest] upon which the object will be removed, and replaced with the remaining resources."
                }
              }
            },
            "hs_buildable": {
              "type": "object",
              "description": "Marks this as a 'buildable object'. Incompatible with 'hs_resource'.",
              "properties": {
                "skill": {
                  "type": "string",
                  "description": "The skill required to complete this building.\n- See: skill.lua",
                  "enum": [
                    "gathering",
                    "diplomacy",
                    "basicBuilding",
                    "researching",
                    "fireLighting",
                    "rockKnapping",
                    "flintKnapping",
                    "boneCarving",
                    "pottery",
                    "potteryFiring",
                    "spinning",
                    "flutePlaying",
                    "thatchBuilding",
                    "woodBuilding",
                    "mudBrickBuilding",
                    "basicHunting",
                    "spearHunting",
                    "butchery",
                    "campfireCooking",
                    "treeFelling",
                    "woodWorking",
                    "toolAssembly",
                    "digging",
                    "mining",
                    "chiselStone",
                    "planting",
                    "mulching",
                    "threshing",
                    "grinding",
                    "baking",
                    "brickBuilding",
                    "tiling",
                    "medicine",
                    "blacksmithing"
                  ]
                },
                "research": {
                  "type": "string",
                  "description": "The research required to unlock this building.\n- See: research.lua",
                  "enum": [
                    "gathering",
                    "basicBuilding",
                    "researching",
                    "diplomacy",
                    "fire",
                    "thatchBuilding",
                    "mudBrickBuilding",
                    "rockKnapping",
                    "flintKnapping",
                    "boneCarving",
                    "flutePlaying",
                    "pottery",
                    "digging",
                    "planting",
                    "threshing",
                    "treeFelling",
                    "spinning",
                    "basicHunting",
                    "spearHunting",
                    "butchery",
                    "woodWorking",
                    "toolAssembly",
                    "mining",
                    "campfireCooking",
                    "woodBuilding",
                    "grinding",
                    "mulching",
                    "baking",
                    "potteryFiring",
                    "brickBuilding",
                    "tiling",
                    "medicine",
                    "composting",
                    "blacksmithing",
                    "chiselStone"
                  ]
                },
                "build_sequence": {
                  "type": "string",
                  "description": "Build sequence to use.\n- See: craftable.lua",
                  "enum": [
                    "researchBuildSequence",
                    "researchPlantSequence",
                    "threshingSequence",
                    "grindingSequence",
                    "kneedingSequence",
                    "smithingSequence"
                  ]
                },
                "classification": {
                  "type": "string",
                  "description": "The classification for this craftable.\n- See: constructable.lua",
                  "default": "build",
                  "enum": [
                    "build",
                    "plant",
                    "craft",
                    "path",
                    "place",
                    "fill",
                    "research",
                    "fertilize"
                  ]
                },
                "seat_type": {
                  "type": "string"
                },
                "resources": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "resource": {
                        "type": "string"
                      },
                      "count": {
                        "type": "number"
                      }
                    },
                    "required": ["resource", "count"]
                  }
                },
                "model_placeholder": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["key"],
                    "properties": {
                      "key": { "type": "string" },
                      "default_model": { "type": "string" },
                      "resource": { "type": "string" },
                      "remaps": {
                        "type": "remap"
                      },
                      "is_store": { "type": "boolean" }
                    }
                  }
                },
                "props": {
                  "type": "object",
                  "properties": {
                    "allowBuildEvenWhenDark": {
                      "type": "boolean",
                      "default": false
                    },
                    "allowYTranslation": { "type": "boolean", "default": true },
                    "allowXZRotation": { "type": "boolean", "default": true },
                    "noBuildUnderWater": { "type": "boolean", "default": true },
                    "canAttachToAnyObjectWithoutTestingForCollisions": {
                      "type": "boolean",
                      "default": false
                    }
                  }
                }
              }
            },
            "hs_decoration": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            },
            "hs_craftable": {
              "type": "object",
              "properties": {
                "skill": {
                  "type": "string",
                  "enum": [
                    "gathering",
                    "diplomacy",
                    "basicBuilding",
                    "researching",
                    "fireLighting",
                    "rockKnapping",
                    "flintKnapping",
