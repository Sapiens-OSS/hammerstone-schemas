                    "chiselStone"
                  ]
                },
                "build_sequence": {
                  "type": "string",
                  "enum": [
                    "researchBuildSequence",
                    "researchPlantSequence",
                    "threshingSequence",
                    "grindingSequence",
                    "kneedingSequence",
                    "smithingSequence"
                  ]
                },
                "display_object": {
                  "type": "string",
                  "description": "Alternative object to display as."
                },
                "resources": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["action"],
                    "properties": {
                      "resource": {
                        "type": "string"
                      },
                      "count": {
                        "type": "number"
                      },
                      "action": {
                        "type": "object",
                        "properties": {
                          "action_type": {
                            "type": "string",
                            "enum": [
                              "idle",
                              "moveTo",
